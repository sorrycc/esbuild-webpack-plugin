{
  "name": "webpack-plugin-esbuild",
  "version": "1.0.0-beta.1",
  "description": "Use esbuild as minifier.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsc -w --p src",
    "build": "rm -rf dist && tsc -p src",
    "prepublishOnly": "yarn build && np --no-cleanup --yolo --no-publish"
  },
  "keywords": [],
  "author": "chencheng <sorrycc@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "dependencies": {
    "esbuild": "^0.2.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.0.11",
    "@types/webpack": "^4.41.12",
    "lint-staged": "^10.2.1",
    "prettier": "^2.0.5",
    "typescript": "^3.8.3",
    "umi": "^3.1.3",
    "webpack": "^4.43.0",
    "webpack-sources": "^1.4.3",
    "yorkie": "^2.0.0"
  }
}
